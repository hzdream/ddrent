<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>assembly</id>
	<formats>
		<format>dir</format>
		<format>tar.gz</format>
        <format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
            <includes>
                <include>conf/**</include>
				<include>logs/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <includes>
                <include>bin/**</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
			<directory>src/main/resources/${profiles.active}</directory>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>
	</fileSets>
	<moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.aifeng:demo-web-starter</include>
			</includes>
			<binaries>
                <outputDirectory>lib/</outputDirectory>
                <unpack>false</unpack>
				<excludes>
					<exclude>*</exclude>
				</excludes>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>